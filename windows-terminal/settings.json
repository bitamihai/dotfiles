	"disabledProfileSources" : "Windows.Terminal.Azure",

	// Key bindings
	"keybindings" :
	[
		// Tabs
		{
			"command" : "duplicateTab",
			"keys" :
			[
				"ctrl+t"
			]
		},
		{
			"command" : "openNewTabDropdown",
			"keys" :
			[
				"alt+t"
			]
		},
		{
			"command" : "closeTab",
			"keys" :
			[
				"ctrl+shift+t"
			]
		},
		{
			"command" : "nextTab",
			"keys" :
			[
				"ctrl+tab"
			]
		},
		{
			"command" : "prevTab",
			"keys" :
			[
				"ctrl+shift+tab"
			]
		},
		// Panes
		{
			"command":
			{
				"action": "splitPane",
				"split": "auto",
				"splitMode": "duplicate"
			},
			"keys": "ctrl+p"
		},
		{
			"command": "closePane",
			"keys": "ctrl+shift+p"
		},
		{
			"command":
			{
				"action": "moveFocus",
				"direction": "down"
			},
			"keys": "ctrl+down"
		},
		{
			"command":
			{
				"action": "moveFocus",
				"direction": "left"
			},
			"keys": "ctrl+left"
		},
		{
			"command":
			{
				"action": "moveFocus",
				"direction": "right"
			},
			"keys": "ctrl+right"
		},
		{
			"command":
			{
				"action": "moveFocus",
				"direction": "up"
			},
			"keys": "ctrl+up"
		}
	],

